<?xml version="1.0" encoding="UTF-8"?>

<facelet-taglib version="2.0"
				xmlns="http://java.sun.com/xml/ns/javaee"
				xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd">

	<namespace>http://amasoon.ch/jsf/taglib</namespace>
	<tag>
		<tag-name>validateCreditCard</tag-name>
		<validator>
			<validator-id>ch.amasoon.CreditCardValidator</validator-id>
		</validator>
	</tag>
	<tag>
		<tag-name>inputExpirationDate</tag-name>
		<component>
			<component-type>ch.amasoon.ExpirationDateInput</component-type>
			<renderer-type>ch.amasoon.ExpirationDateRenderer</renderer-type>
		</component>
	</tag>

</facelet-taglib>
